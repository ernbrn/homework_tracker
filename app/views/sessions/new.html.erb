<% provide(:title, "Sign in") %>
<div class = "row">
<div class = "large-8 columns">
<h1> Welcome to Homework Tracker! Please Sign In. </h1>
</div>
</div>
<p id="notice"><%= notice %></p>


<div class = "row">
  <div class = "large-6 columns">


    <%= form_for(:session, url: sessions_path) do |f| %>

    <%=f.label :name %>
    <%=f.text_field :name %>

    <%=f.label :password %>
    <%=f.password_field :password %>

    <%= f.submit "Ok!", class:"button [large]" %>
    <%end%>


   Psst! Do you need to  <%= link_to "Sign Up?", new_user_path %>

</div>
</div>
